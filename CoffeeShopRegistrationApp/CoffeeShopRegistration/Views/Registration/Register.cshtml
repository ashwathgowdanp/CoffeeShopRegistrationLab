@model UserProfile

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<h3>Registration</h3>

<form asp-controller="Registration" asp-action="HandleSubmit" method="post">

    <div class="row form-group">
    <label class="col-md-2 col-form-label" asp-for="FirstName"> </label>
    <div class="col-md-10">
        <input type="text" class="form-control" asp-for="FirstName" />
    </div>
    <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>


    <div class="row form-group">
    <label class="col-md-2 col-form-label" asp-for="LastName"> </label>
    <div class="col-md-10">
        <input type"text" class="form-control" asp-for="LastName" />
        </div>
    <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="row form-group">
        <label class="col-md-2 col-form-label" asp-for="Email"></label>
        <div class="col-md-10">
            <input type="email" class="form-control" asp-for="Email" />
        </div>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    
    <div class="row form-group">
        <label class="col-md-2 col-form-label" asp-for="Password"></label>
        <div class="col-md-10">
            <input type="password" class="form-control" asp-for="Password" />
        </div>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="row form-group">
        <div col="col-md-2">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>